  <br>
  <button id="rightbar-top"><svg xmlns="http://www.w3.org/2000/svg" height="36px" viewBox="0 -960 960 960" width="36px"
      fill="#000">
      <path d="M446.67-160v-513l-240 240L160-480l320-320 320 320-46.67 47-240-240v513h-66.66Z">
    </svg>
    <span>@rightbar.top</span>
  </button>
  <br>
  <script>
    $("#rightbar-theme").on("click", () => changeTheme());
    $("#rightbar-translate").on("click", () => changeLanguage());
    $("#rightbar-top").on("click", () => BODY.scrollTop(0));
  </script>
</div>